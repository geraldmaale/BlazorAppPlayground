@page "/"

@using Microsoft.AspNetCore.Authentication


<AuthorizeView>
    <Authorized>
        <h2>Claims</h2>

        <dl>
            @foreach (var claim in context.User.Claims)
            {
                <dt>@claim.Type</dt>
                <dd>@claim.Value</dd>
            }
        </dl>
                
    </Authorized>

    <NotAuthorized>

    </NotAuthorized>
</AuthorizeView>